# Salesforce Configuration
SALESFORCE_CLIENT_ID=your_salesforce_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_connected_app_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_WEBHOOK_SECRET=your_webhook_verification_secret

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# 8x8 Configuration
EIGHTBYEIGHT_API_KEY=your_8x8_api_key
EIGHTBYEIGHT_API_URL=https://api.8x8.com/v1
EIGHTBYEIGHT_SMS_FROM=your_8x8_sms_number
EIGHTBYEIGHT_AGENT_ID=your_8x8_agent_id

# Service Ports
EVENT_LISTENER_PORT=3000
CHURN_PREDICTION_PORT=3001
ORCHESTRATION_PORT=3002

# Service URLs (for inter-service communication)
CHURN_PREDICTION_URL=http://localhost:3001
ORCHESTRATION_URL=http://localhost:3002

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/churn_agent
REDIS_URL=redis://localhost:6379

# Churn Thresholds
CHURN_THRESHOLD_CRITICAL=70
CHURN_THRESHOLD_HIGH=40

# Node Environment
NODE_ENV=development
